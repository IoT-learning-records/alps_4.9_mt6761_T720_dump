# Kphone project .rc configure

on post-fs
    #K-free
    chmod 0777 /mnt/vendor/protect_s

    # kphone : add prod_info folder
    mkdir /mnt/vendor/protect_s/prod_info 0771 system system 
    chown system system /mnt/vendor/protect_s/prod_info
    chmod 0777 /mnt/vendor/protect_s/prod_info
    #K-free

property_service_init
    #K-free
    chmod 0777 /mnt/vendor/protect_s

    # kphone : add prod_info folder
    mkdir /mnt/vendor/protect_s/prod_info 0771 system system 
    chown system system /mnt/vendor/protect_s/prod_info
    chmod 0777 /mnt/vendor/protect_s/prod_info
    #K-free

