# KPHONE:fengmeiyin FOR PRELOAD FILE TO INTERNEL CARD ETC.
service preloadfile  /system/bin/preloadfile.sh
    user root
    group root
    disabled
    oneshot
    seclabel u:r:preloadfile:s0
	
on property:sys.boot_completed=1
    start preloadfile	
